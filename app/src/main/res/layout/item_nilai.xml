<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_nilai"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:gravity="center">

    <TextView
        android:id="@+id/txtNomer"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:text="99"
        android:layout_marginHorizontal="2dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/txtNamaMapel"
        android:layout_marginHorizontal="2dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Bahasa Indonesia"
        android:maxLines="3"/>

    <TextView
        android:id="@+id/txtNilaiTugas"
        android:layout_marginHorizontal="2dp"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="100"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/txtNilaiUTS"
        android:layout_marginHorizontal="2dp"
        android:layout_width="27dp"
        android:layout_height="wrap_content"
        android:text="100"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/txtNilaiUAS"
        android:layout_marginHorizontal="2dp"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:text="100"
        android:maxLines="2"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/txtNilaiTotal"
        android:layout_marginHorizontal="2dp"
        android:layout_width="29dp"
        android:layout_height="wrap_content"
        android:text="100"
        android:maxLines="2"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/txtNilaiKKM"
        android:layout_marginHorizontal="2dp"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:text="100"
        android:maxLines="2"
        android:textAlignment="center"/>

</LinearLayout>